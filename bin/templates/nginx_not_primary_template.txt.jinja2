server {
    listen 80;

    server_name {{domain}};
    return 301 https://{{primary_domain}}$request_uri;
}
server {
    listen 443 ssl;
    ssl on;
    ssl_certificate /etc/letsencrypt/live/{{domain}}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{domain}}/privkey.pem;
    server_name {{domain}};
    return 301 https://{{primary_domain}}$request_uri;
}
